{% extends "EmotionBundle:Default:layout.html.twig" %}

{% block title %} eMotion - Confirmation de la commande {% endblock %}
{% block body %}

    <div class="container admin_lists rent_page">
        <h2>Récapitulatif de la commande</h2>
        <table>
            <tr>
                <td>Nom</td>
                <td>Véhicule loué</td>
                <td>Prix total de la commande</td>
                <td>Date du début de la location</td>
                <td>Date de fin de la location</td>
            </tr>
            <tr>
                <td width="15%">{{ rent.user.firstname }} {{ rent.user.name }}</td>
                <td width="30%"><a href="{{ path('emotion_product', {'id': rent.product.id}) }}"><b>{{ rent.product.brand.brand }} {{ rent.product.model.model }} :</b> {{ rent.product.name }}</a></td>
                <td width="15%">{{ rent.product.price }} €</td>
                <td width="20%">{{ rent.daterental|date("d/m/Y") }}</td>
                <td width="20%">{{ rent.datedelivery|date("d/m/Y") }}</td>
            </tr>
        </table>
        <form class="payement" action="{{ path('emotion_succes') }}" method="POST">
            {#<input type="number" min="1000" max="10000" id="price"/></br></br>#}
            <script
                    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="pk_test_UMt0ZkMMYQ3d5vEX2b4NYABK"
                    data-amount="{{ rent.product.price }}00"
                    data-name="Payement"
                    data-description="Widget"
                    data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                    data-locale="auto"
                    data-zip-code="true"
                    data-currency="eur">
            </script>
        </form>
    </div>


{% endblock %}